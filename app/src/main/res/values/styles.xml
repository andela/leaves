<resources>
    <style name="AppThemeBidder" parent="AppTheme.Base">
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/windowBackground</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/windowBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/shinyBrown</item>
    </style>

    <style name="event_details_icon_texts">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="event_save_item_color">
        <item name="android:background">#006064</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="event_cancel_item_color">
        <item name="android:background">#006064</item>
        <item name="android:textColor">#f00</item>
    </style>

    <style name="enter_event_button_style">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="payment_activity_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="payment_activity_text_title_style">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
